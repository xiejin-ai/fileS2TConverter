{
  "name": "file-s2t-converter",
  "displayName": "file-s2t-converter",
  "description": "监测文件夹中的文件更新，将简体中文转换为其他语言。",
  "version": "0.0.1",
  "publisher": "xiejin",
  "engines": {
    "vscode": "^1.94.0"
  },
  "activationEvents": [
    "fileS2TConverter.start",
    "fileS2TConverter.stop"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileS2TConverter.start",
        "title": "开始文件翻译监测"
      },
      {
        "command": "fileS2TConverter.stop",
        "title": "停止文件翻译监测"
      },
      {
        "command": "fileS2TConverter.convert",
        "title": "立即翻译文件"
      },
      {
        "command": "fileS2TConverter.convertCurrentFile",
        "title": "立即翻译当前文件"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "文件翻译转换器",
      "properties": {
        "fileS2TConverter.apiKey": {
          "type": "string",
          "description": "API 密钥。"
        },
        "fileS2TConverter.inputFolder": {
          "type": "string",
          "default": "i18n/zh-Hans",
          "description": "需要监测的输入文件夹路径。"
        },
        "fileS2TConverter.outputConfigs": {
          "type": "array",
          "default": [
            {
              "folder": "i18n/zh-Hant",
              "isOpencc": true,
              "language": "tw"
            },

            {
              "folder": "i18n/en-US",
              "isOpencc": false,
              "language": "en"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "folder": {
                "type": "string",
                "description": "输出文件夹路径"
              },
              "isOpencc": {
                "type": "boolean",
                "description": "是否使用 OpenCC 转换"
              },
              "language": {
                "type": "string",
                "enum": ["cn", "tw", "twp", "hk", "jp", "en"],
                "description": "目标语言"
              }
            },
            "required": ["folder", "language"]
          },
          "description": "输出配置列表，包含输出文件夹和目标语言"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "fileS2TConverter.start",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/google-translate-api": "^2.3.5",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/opencc-js": "^1.0.3",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "google-translate-api": "^2.3.0",
    "google-translate-api-browser": "^5.0.0",
    "lodash": "^4.17.21",
    "opencc-js": "^1.0.5"
  }
}
