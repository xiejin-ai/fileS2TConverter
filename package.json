{
  "name": "file-s2t-converter",
  "displayName": "file-s2t-converter",
  "description": "监测文件夹中的文件更新，将简体中文转换为繁体中文。",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "activationEvents": [
    "fileS2TConverter.start",
    "fileS2TConverter.stop"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fileS2TConverter.start",
        "title": "开始简体到繁体转换监测"
      },
      {
        "command": "fileS2TConverter.stop",
        "title": "停止简体到繁体转换监测"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "简体到繁体转换器",
      "properties": {
        "fileS2TConverter.inputFolder": {
          "type": "string",
          "default": "i18n/zh-Hans",
          "description": "需要监测的输入文件夹路径。"
        },
        "fileS2TConverter.outputFolder": {
          "type": "string",
          "default": "i18n/zh-Hant",
          "description": "转换后输出的文件夹路径。"
        },
        "fileS2TConverter.fileSuffixList": {
          "type": "array",
          "default": [
            ".ts"
          ],
          "description": "需要监听的文件后缀列表。",
          "items": {
            "type": "string",
            "description": "文件扩展名，例如 'ts'、'js'。"
          }
        },
        "fileS2TConverter.langFrom": {
          "type": "string",
          "default": "cn",
          "description": "转换前的语言。",
          "enum": [
            "cn",
            "tw",
            "twp",
            "hk",
            "jp",
            "t"
          ],
          "enumDescriptions": [
            "简体中文 (cn)",
            "繁体中文 (tw)",
            "繁体中文 - 台湾 (twp)",
            "繁体中文 - 香港 (hk)",
            "日语 (jp)",
            "其他 (t)"
          ]
        },
        "fileS2TConverter.langTo": {
          "type": "string",
          "default": "twp",
          "description": "转换后的语言。",
          "enum": [
            "cn",
            "tw",
            "twp",
            "hk",
            "jp",
            "t"
          ],
          "enumDescriptions": [
            "简体中文 (cn)",
            "繁体中文 (tw)",
            "繁体中文 - 台湾 (twp)",
            "繁体中文 - 香港 (hk)",
            "日语 (jp)",
            "其他 (t)"
          ]
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "fileS2TConverter.start",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/opencc-js": "^1.0.3",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.6.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "chokidar": "^4.0.1",
    "lodash": "^4.17.21",
    "opencc-js": "^1.0.5"
  }
}
